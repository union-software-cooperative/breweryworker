<%= render 'notice' %>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="text-right">
      <%= link_to current_person.follows?(@supergroup) ? t('unfollow') : t('follow'), follow_polymorphic_path, class: "btn btn-primary btn-follow" %>
    </div>
    
    <% if @supergroup.banner.present? %>
      <div class="banner-placeholder">
        <%=banner_image %>
        <%=render 'show' %>
      </div>

    <% else %>
      <%= render 'show' %>
    <% end %>
  </div>
</div>
